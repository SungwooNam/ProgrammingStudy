<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Simple Window" 
    x:Class="WPFStudy.TestBinding.UsingBinding"
>
    <StackPanel>
        <TextBlock 
            x:Name="currentFolder" 
            Text="{Binding ElementName=treeView, Path=SelectedItem.Header}"
        />
        <TextBlock 
            Text="{Binding SelectedItem.Header, ElementName=treeView}"
        />
        <TextBlock 
            Text="{Binding Source={x:Reference treeView}, Path=SelectedItem.Header}"
        />
        <TreeView
            x:Name="treeView"
            Width="200"
            Height="100"
        >
            <TreeViewItem Header="Hello" />
            <TreeViewItem Header="Hi" />
            <TreeViewItem Header="Hey" />
            <TreeViewItem Header="What'up" />
            <TreeViewItem Header="Good Morning" />
        </TreeView>
    </StackPanel>
</Window>
