<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Simple Window" 
    x:Class="WPFStudy.TestBinding.UsingDataTemplate"
    xmlns:local="clr-namespace:WPFStudy.TestBinding"
>
    <Window.Resources>
        <local:Photos x:Key="photos"/>
    </Window.Resources>
    
    <StackPanel>
        <ListBox 
            x:Name="listBox"
            ItemsSource="{Binding Source={StaticResource photos}}"
            Height ="100" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding Path=ImagePath}" Height="35"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button 
            Content="Check" 
            Click="OnCheckClick">
        </Button>
    </StackPanel>
</Window>
